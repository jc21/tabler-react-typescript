{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "src",
    "target": "es5",
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "src",
    "styleguide.config.js"
  ],
  "exclude": [
    "build",
    "node_modules",
    "docz",
    "src/**/*.mdx",
    "src/**/*.test.tsx"
  ]
}